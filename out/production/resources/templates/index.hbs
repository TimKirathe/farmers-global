    color: #fff;
    }

    nav ul {
    list-style: none;
    float: right;
    margin: 0;
    padding: 0;
    display: flex;
    }

    nav ul li a {
    line-height: 80px;
    color: #fff;
    padding: 12px 30px;
    text-decoration: none;
    font-size: 14px;
    font-weight: bold;
    text-transform: uppercase;
    }

    nav ul li a:hover {
    background: rgb(0, 0, 0, 0.7);
    border-radius: 6px;
    }

    .container {
    width: 100%;
    height: 100vh;
    background-size: cover;
    background-position: center;
    margin-top: 8%;
    }

    h1 {
        font-size: 3rem;
    }

    p {
        font-size: 1.5rem;
    }

@media (max-width: 800px) {
    .container {
        width: 50%;
        margin: auto;
